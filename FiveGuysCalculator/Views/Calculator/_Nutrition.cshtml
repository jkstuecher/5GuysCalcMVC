<link rel="stylesheet" href="~/css/nutritionlabel.css">

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript" )"></script>

<section class="performance-facts">
    <header class="performance-facts__header">
        <h1 class="performance-facts__title">Nutrition Facts</h1>
        <p>Serving Size: Your Selection </p>
    </header>
    <table class="performance-facts__table">
        <thead>
            <tr>
                <th style="text-align: left;" colspan="3" class="small-info">
                    Amount
                    Per Serving
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info"> <b>Calories</b> 200 </th>
            </tr>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info"> <b>Calories from Fat</b> 130 </th>
            </tr>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info"> <b>Total Fat</b> 14g </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <td style="text-align: left;" class="blank-cell">
                    <br>
                </td>
                <th class="small-info"> Saturated Fat 9g </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <td style="text-align: left;" class="blank-cell">
                    <br>
                </td>
                <th class="small-info"> Trans Fat 0g </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info">
                    <b>Cholesterol</b>
                </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info">
                    <b>Sodium</b>
                    40mg
                </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <th style="text-align: left;" colspan="2" class="small-info">
                    <b>
                        Total
                        Carbohydrate
                    </b> @Html.Raw("placeholder")
                </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <td style="text-align: left;" class="blank-cell">
                    <br>
                </td>
                <th class="small-info"> Dietary Fiber 1g </th>
                <td>
                    <br>
                </td>
            </tr>
            <tr>
                <td style="text-align: left;" class="blank-cell">
                    <br>
                </td>

                <th class="small-info"> Sugars @ViewBag.Derp</th>
                <td>
                    <br>
                </td>
            </tr>
            <tr class="thick-end">
                <th style="text-align: left;" colspan="2" class="small-info">
                    <b>Protein</b>
                    3g
                </th>
                <td>
                    <br>
                </td>
            </tr>
        </tbody>
    </table>
</section>

